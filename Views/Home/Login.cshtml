<div>
    <h1>Login to this Cool Site!</h1>
    <a href="/">Register</a>
    @* Login Form *@
    @model LoginUser
    @* go to the LoginPost method in the Home controller *@
    <form asp-action="LoginPost" asp-controller="Home" method="post">
        @* Email input *@
        <span asp-validation-for="Email"></span>
        <label asp-for="Email">Email:</label>
        <input type="email" asp-for="Email"></input>
        <br>
        @* Password input *@
        <span asp-validation-for="Password"></span>
        <label asp-for="Password">Password:</label>
        <input type="password" asp-for="Password"></input>
        <br>
        <button type="submit">Sign up Now</button>
    </form>
</div>